{
    "name": "docs-extensions",
    "displayName": "Docs extensions",
    "description": "This is a slightly curated list of extensions I have found useful when working on a markdown based docs site.",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/bradleycamacho/docs-extensions.git"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Extension Packs"
    ],  
    "icon": "./icon.png",
    "galleryBanner": {
        "color": "#C80000",
        "theme": "dark"
    },
    "extensionPack": [ 
        "github.copilot",
        "github.vscode-pull-request-github",
        "vincaslt.highlight-matching-tag",
        "oderwat.indent-rainbow",
        "zainchen.json",
        "ms-vscode.live-server",
        "yzhang.markdown-all-in-one",
        "silvenon.mdx",
        "codestream.codestream",
        "esbenp.prettier-vscode",
        "ms-vsliveshare.vsliveshare-pack",
        "hookyqr.beautify",
        "streetsidesoftware.code-spell-checker",
        "dbaeumer.vscode-eslint",
        "fnando.linter",
        "davidanson.vscode-markdownlint",
        "hajdaini.select-until-pattern",
        "jkjustjoshing.vscode-text-pastry",
        "vscode-icons-team.vscode-icons",
        "kirozen.wordcounter",
        "redhat.vscode-yaml"
    ]
}